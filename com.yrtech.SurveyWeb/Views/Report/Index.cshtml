@{
    ViewBag.Title = "报告上传";
}

<div class="condition">
    <div class="form-inline">
        <div class="form-group">
            <label class="control-label">品牌:</label>
            <select id="brand-sel" class="form-control" style="width:200px"></select>
        </div>
        <div class="form-group">
            <label class="control-label">年份:</label>
            <select id="year-sel" class="form-control" style="width:200px"></select>
        </div>
        <div class="form-group">
            <label class="control-label">期号:</label>
            <select id="project-sel" class="form-control" style="width:200px"></select>
        </div>
    </div>
    <div style="float:right;width:200px;text-align:right">
        <button id="btnSearch" class="btn btn-primary">查询</button>
    </div>
  
</div>
 
<div class="result table-responsive"  >
    <div class="form-inline">
        <div class="form-group">
            <input type="text" class="form-control" name="keyword" id="keyword" placeholder="经销商代码/名称" value="">
            <button type="button" id="btnSearchByKey" class="btn btn-default ">搜 索</button>
        </div>
        <div class="form-group" style="float:right;width:600px;text-align:right">
            <span style="color:red">文件命名示例：经销商代码_xxxx</span>
            <a id="btnDeleteFile" class="btn btn-default" onclick="deleteFileByProject()">按期号删除文件</a>
            <a id="btnUploadFile" class="btn btn-default">批量上传文件</a>
            <a id="btnUploadVideo" class="btn btn-default">批量上传视频</a>
        </div>
    </div>
    <br />
    <table id="report-table" class="table table-bordered table-set"></table>
</div>


<div id="upload-container" class="container-fluid" style="margin:0;padding:0;display:none">
    <div id="ossfile"></div>
</div>

@*文件列表详细弹出框*@
<div class="modal bs-example-modal-lg fade" id="DetailModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" style="width:1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">文件列表</h4>
            </div>
            <div class="modal-body" style="height:600px; overflow:auto ">
                <table id="files-table" class="table table-bordered table-set"></table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/api/common.js"></script>
<script src="~/Scripts/custom/form-serialize.js?20200510"></script>

<script src="~/Scripts/oss-upload-direct/lib/crypto1/crypto/crypto.js"></script>
<script src="~/Scripts/oss-upload-direct/lib/crypto1/hmac/hmac.js"></script>
<script src="~/Scripts/oss-upload-direct/lib/crypto1/sha1/sha1.js"></script>
<script src="~/Scripts/oss-upload-direct/lib/plupload-2.1.2/js/plupload.full.min.js"></script>
<script src="~/Scripts/oss-upload-direct/lib/base64.js"></script>
<script src="~/Scripts/oss-upload-direct/upload.js?20200426"></script>
<script>
    var ossFileUploader;
    var ossVideoUploader;
    var osspath;
    $(function () {
        $('title').html('@ViewBag.Title')

        //加载期号
        $("#brand-sel,#year-sel").change(function () {
            bindProjectSelect();
        });

        //报告上传查询
        $("#btnSearch,#btnSearchByKey").click(function () {
            search();
        });

        $("#btnUploadFile,#btnUploadVideo").click(function () {
            selShopId = undefined;
        });

        initReportTable();

        bindBrandSelect();
        for (var i = 2020; i <= 2030; i++) {
            $("#year-sel").append($("<option>").text(i + "").val(i + ""));
        }
        $("#year-sel").change();

        initOss();

        setTimeout(function () { search();}, 500);
    });

    function initOss() {
        getParams();
        osspath = "Survey/ReportFile/" + selProject + "/";
        ossFileUploader = new OSSClient({
            osspath: osspath + "files/",
            selectfiles: "btnUploadFile",
            fileAddCheck: function () {
                return true;
            },
            fileAddCheckMsg: "",
            uploaded: function (file) {
                //调用导入方法
                importFiles(file, "01");
            }
        });

        ossVideoUploader = new OSSClient({
            osspath: osspath + "videos/",
            selectfiles: "btnUploadVideo",
            osspath: osspath,
            fileAddCheck: function () {
                return true;
            },
            fileAddCheckMsg: "",

            uploaded: function (file) {
                //调用导入方法
                importFiles(file, "02");
            }
        });
    }

    function importFiles(fileObj, fileType) {
        getParams();
        if (selShopId) {
            var fileNameNoTime = fileObj.fileName.substr(fileObj.fileName.indexOf("_") + 1);
            $.commonPost("ReportFile/ReportFileSave", {
                ProjectId: selProject,
                ShopId: selShopId,
                ReportFileType: fileType,
                ReportFileName: fileNameNoTime,
                Url_OSS: fileObj.osspath,
                InUserId: loginUser.Id
            }, function (data) {
                search();
            });
        } else {
            var ufiles = [];
            var fileNameNoTime = fileObj.fileName.substr(fileObj.fileName.indexOf("_")+1);
            var shopCode = fileNameNoTime.substr(0, fileNameNoTime.indexOf("_"));
            ufiles.push({
                TenantId: loginUser.TenantId,
                BrandId: $("#brand-sel").val(),
                ProjectId: selProject,
                ShopCode: shopCode,
                ReportFileType: fileType,
                ReportFileName: fileNameNoTime,
                Url_OSS: fileObj.osspath,
                InUserId: loginUser.Id
            });

            $.commonPost("ReportFile/ReportFileListSave", {
                ListJson: JSON.stringify(ufiles)
            }, function (data) {
                search();
            });
        }
    }

    var oneShopUploaders = [];
    function search() {
        var params = getParams();
        if (!params) return;

        $('#report-table').bootstrapTable("showLoading");
        $.commonGet("ReportFile/ReportFileListUploadSearch", params, function (data) {
            $('#report-table').bootstrapTable("load", data);
            $('#report-table').bootstrapTable("hideLoading");
            if (oneShopUploaders) {
                $.each(oneShopUploaders, function () {
                    $(this).trigger("onDestroy");
                })
            }
            oneShopUploaders = [];
            $.each(data, function (i, item) {
                var uploader = new OSSClient({
                    osspath: osspath + "files/",
                    selectfiles: "shopFileUploaderA_" + item.ShopId,
                    fileAddCheck: function () {
                        return true;
                    },
                    fileAddCheckMsg: "",
                    uploaded: function (file) {
                        //调用导入方法
                        importFiles(file, "01");
                    }
                });
                oneShopUploaders.push(uploader);

                oneShopUploaders.push(new OSSClient({
                    osspath: osspath + "files/",
                    selectfiles: "shopVideoUploaderA_" + item.ShopId,
                    fileAddCheck: function () {
                        return true;
                    },
                    fileAddCheckMsg: "",
                    uploaded: function (file) {
                        //调用导入方法
                        importFiles(file, "02");
                    }
                }));
            })

        })
    }
    var curRow;
    function initReportTable() {
        //生成用户数据
        $('#report-table').bootstrapTable({
            pagination: true,
            showLoading: true,
            striped: true, //是否显示行间隔色
            showColumns: false, // 开启自定义列显示功能
            sortable: true,
            pageNumber: 1,
            pageSize: 15,
            pageList: [10, 15, 20, 50],
            width: "100%",
            height: getClientHeight()-300,
            columns: [{
                title: "经销商代码",
                field: 'ShopCode',
                width: 150,
                valign: "middle",
                align: "center"
            }, {
                title: "经销商名称",
                field: "ShopName",
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "文件数",
                field: "ReportFileCount_File",
                width: 120,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:GoDetail(1)" style="min-width:100px">' + value + '</a>';
                }
            }, {
                title: "文件上传",
                field: "",
                width: 120,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a id="shopFileUploaderA_' + row.ShopId + '" href="javascript:return false;"  onclick="uploadFile();" style="min-width:100px">文件上传</a>';
                }
            }, {
                title: "视频数",
                field: "ReportFileCount_Video",
                width: 120,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:GoDetail(2)" style="min-width:100px">' + value + '</a>';
                }
            }, {
                title: "视频上传",
                field: "",
                width: 120,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a id="shopVideoUploaderA_' + row.ShopId + '" href="javascript:return false;" onclick="uploadFile();" style="min-width:100px">视频上传</a>';
                }
            }],
            onClickRow: function (row, $element) {
                curRow = row;
            }
        }).bootstrapTable("showLoading"); 

    }

    //单经销商上传
    function uploadFile() {
        selShopId = curRow.ShopId;
    }

    var fileTable;
    var selProject;
    var selShopId;
    var selFileType;
    function GoDetail(reportFileType) {
        $("#DetailModal").modal("show");
        getParams();
        selShopId = curRow.ShopId;
        if (fileTable) {
            fileTable.bootstrapTable("destroy");
        }
        fileTable = $('#files-table').bootstrapTable({
            pagination: false,
            striped: true, //是否显示行间隔色
            showColumns: false, // 开启自定义列显示功能
            sortable: true,
            scroll: false,
            columns: [{
                title: "序号",
                field: 'SeqNO',
                width: 100,
                valign: "middle",
                align: "center"
            }, {
                title: "文件名称",
                field: "ReportFileName",
                width: 600,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "上传时间",
                field: "InDateTime",
                width: 140,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return value;
                }
            }, {
                title: "删除",
                field: "",
                width: 80,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:return false;" style="min-width:100px" onclick="deleteFile(' + row.SeqNO + ',\'' + reportFileType + '\')">删除</a>';
                }
            }]
        });

        loadFileList(reportFileType);
    }

    function loadFileList(reportFileType) {
        $.commonGet("ReportFile/ReportFileSearch", {
            ProjectId: selProject,
            ShopId: selShopId,
            reportFileType: reportFileType === 1 ? '01' : '02'
        }, function (data) {
            fileTable.bootstrapTable("load", data);
        })
    }

    //删除文件
    function deleteFile(seq, reportFileType) {
        $.commonGet("ReportFile/ReportFileDelete", {
            ProjectId: selProject,
            ShopId: selShopId,
            SeqNO: seq
        }, function (data) {
            loadFileList(reportFileType);
            search();
        });
    }


    function loadProject() {
        loadProjectBindDropdownList($("#brand-sel").val(), $("#year").val(), function (data) {
            $("#ProjectListDiv").empty();
            if (data) {
                if (data.length == 0) {
                    alert("当前年份无期号！");
                    return;
                }
                for (i in data) {
                    var item = data[i];
                    var project = $('<label class="dealer-li"> </label>');
                    project.append($('<input name="Project" type="radio">').val(item.ProjectId))
                        .append($('<font>').text(item.ProjectName));
                    $("#ProjectListDiv").append(project);
                }
            }
            $("#ProjectListDiv input[type=radio]").iCheckParser();
            $("#ProjectListDiv input[type=radio]:first").iCheck("check");

            search();
            initOss();
        });
    }

    function getParams() {
        var project = $("#project-sel").val();
        if (!project) {
            alert("请选择期号！");
            return;
        }
        selProject = project;
        $("#brand-sel").val(), $("#year").val()
        return {
            brandId:$('#brand-sel').val(),
            projectId: project || '',
            keyword: $('#keyword').val(),
            pageNum: 1,
            pageCount: 10000
        };
    }

    function deleteFileByProject() {
        confirm("确定要删除" + $("#project-sel option:selected").text() + "的所有文件数据么", function () {
            $.commonGet("ReportFile/ReportFileDelete", {
                ProjectId: selProject,
                ShopId: '',
                SeqNO: ''
            }, function (data) {
                search();
            });
        }, function () { })
    }
</script>