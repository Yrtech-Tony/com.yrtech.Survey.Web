<div class="form-horizontal form-label-left" style="padding-bottom:5px;width:100%">
    <div class="form-inline" style="text-align:center">
        <label class="control-label" style="font-size:16px;">导入期号:<span id="ImportProject"></span></label>
        <div class="item form-inline" style="float:right;">
            <button id="btnImport" class="btn btn-primary form-group" style="margin-right:0px" onclick="importSubjectLossResult()" data-loading-text="导入中...">导入</button>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="item form-group">
    
    <table id="import-subjectloss-table" class="table table-bordered table-set"></table>
</div>
<script>
    $(function () {
      //  initImportSubjectLossResultTable();
    })

    function initImportSubjectLossResultTable(data) {
        $('#import-subjectloss-table').bootstrapTable('destroy').bootstrapTable({
            pagination: true,
            data:data,
            striped: true, //是否显示行间隔色
            height: getClientHeight() - 260,
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 50, 100, 500],
            columns: [{
                title: "题目代码",
                field: 'SubjectCode',
                width: 100,
                valign: "middle",
                align: "center",
            }, {
                title: "失分说明",
                field: "LossDesc",
                width: 200,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: preferenceFormatter
            }, {
                title: "数据状态",
                field: "ImportChk",
                width: 80,
                valign: "middle",
                align: "center",
                sortable: false,
            }, {
                title: "状态说明",
                field: "ImportRemark",
                width: 200,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: preferenceFormatter
            }]
        });
    }

    function preferenceFormatter(value, row, index) {
        return [
            '<a href="#" data-toggle="tooltip" title=' + value + '>' + value + '</a>',
        ].join('');
    }
    function loadImportSubjectLossResult(file) {
        $('#import-subjectloss-table').bootstrapTable("showLoading");
        $.commonGet("Master/SubjectLossResultExcelAnalysis", {
            projectId: $("#project-sel").val(),
            ossPath: file.osspath
        }, function (data) {
            var chk = true;
            if (data && data.length > 0) {
                data.forEach(function (item) {
                    if (!item.ImportChk) {
                        chk = item.ImportChk;
                        return false;
                    }
                })
            }
            if (!chk) {
                $("#btnImport").attr("disabled", true);
            }
          //  $('#import-subjectloss-table').bootstrapTable("load", data);
            // $('#import-subjectloss-table').bootstrapTable("hideLoading");
            initImportSubjectLossResultTable(data);
        });
    }
    function importSubjectLossResult() {
        $("#btnImport").button("loading");
        var rows = $('#import-subjectloss-table').bootstrapTable("getData");
        rows.forEach(function (row) {
            row.ProjectId = $("#project-sel").val();
            row.InUserId = loginUser.Id;
            row.ModifyUserId = loginUser.Id;
        })
        $.commonPost("Master/SubjectLossResultImport", {
            ListJson: JSON.stringify(rows)
        }, function () {
            $("#ModalImport").modal("hide");
            loadSubject();
        });
    }

</script>
