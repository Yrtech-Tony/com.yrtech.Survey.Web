<script>
    var uploader, lossUploader;
    $(function () {
        uploader = undefined
        $('title').html('@ViewBag.Title')
        bindBrandSelect();
        //加载年份
        $("#year-sel").change(function () {
            bindProjectSelect();
        });
        for (var i = 2020; i <= 2030; i++) {
            $("#year-sel").append($("<option>").text(i + "").val(i + ""));
        }
        var tYear = new Date().getFullYear();
        $("#year-sel").val(tYear);
        $("#year-sel").change();

        //加载期号
        $("#brand-sel").change(function () {
            bindProjectSelect();
        });
        $("#project-sel").change(function () {
            bindShopSelect();           
        });
        bindShopSelect();
        $("#shop-sel").change(function () {
            //loadScore();
        });
       
        $("#btnExportAnswer").click(function () {
            $("#btnExportAnswer").button('loading');

            $.commonApi({
                apiType: 'easyPhoto',
                url: 'Answer/AnswerExport',
                params: {
                    projectId: $("#project-sel").val(),
                    shopCode: ''
                },
                success: function (data) {
                    window.location.href = baseEasyPhotoUrl + data;
                },
                complete: function () {
                    $("#btnExportAnswer").button('reset');
                }
            })
        });

        initScoreTable();
        $("#btnQuery").click(function () {
            loadScore();

        })//.trigger("click");
    })

    function loadProjectShop() {
        $('#project-shop-table').bootstrapTable("showLoading");
        $.commonGet("Shop/GetProjectShopExamType", {
            brandId: $("#brand-sel").val(),
            projectId: $("#project-sel").val(),
            shopId: '',
            userId: loginUser.Id
        }, function (data) {
            $('#project-shop-table').bootstrapTable("hideLoading");
            $('#project-shop-table').bootstrapTable("load", data);
        });
    }

    var curRow;
    function saveScore() {
        var params = $("#score-form").serializeJson();
        var json = $("#score-form").data("json");
        if (json && json.length > 0) {
            //编辑
            json = JSON.parse(json);
            params = $.extend(json, params);
        } else {
            //新增
            params = $.extend({
                TenantId: loginUser.TenantId,
                ProjectId:$("#project-sel").val(),
                InUserId: loginUser.Id,
                ModifyUserId: loginUser.Id
            }, params);
        }
        $("#save_button").button("loading");
        $.commonPost("Answer/SaveAnswerInfo", params, function () {
            $("#save_button").button("reset");
            loadScore();
            closeModel();
        }, function () { $("#save_button").button("reset"); });
    }

    function loadScore() {
        var projectId = $("#project-sel").val();
        if (!projectId) {
            alert("请选择一个期号！");
            return
        }
        var shopId = $("#shop-sel").val();
        if (!shopId) {
            alert("请选择一个经销商！");
            return
        }
        $('#score-table').bootstrapTable("showLoading");
        $.commonGet("Answer/GetShopAnswerScoreInfo", {
            projectId:  $("#project-sel").val(),
            shopId: $("#shop-sel").val(),
            subjectId: '',
            key: ''
        }, function (data) {
            $('#score-table').bootstrapTable("hideLoading");
            $('#score-table').bootstrapTable("load", data);
        });
    }

    //初始化期号表格
    function initScoreTable() {
        $('#score-table').bootstrapTable({
            pagination: true,
            striped: true, //是否显示行间隔色
            width: "100%",
            height: getClientHeight() - 260,
            showColumns: false, // 开启自定义列显示功能
            sortable: true,
            pageNumber: 1,
            pageSize: 15,
            pageList: [5, 10, 20, 50],
            columns: [{
                title: "经销商代码",
                field: 'ShopCode',
                width: 120,
                valign: "middle",
                align: "center"
            }, {
                title: "经销商名称",
                field: "ShopName",
                valign: "middle",
                align: "center",
                sortable: false
            },
            {
                title: "题目代码",
                field: "SubjectCode",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "题目序号",
                field: "OrderNO",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "检查点",
                field: "CheckPoint",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "得分",
                field: "PhotoScore",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "备注",
                field: "Remark",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "编辑",
                field: "",
                width: 60,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:goEdit(' + row.Id + ');" style="min-width:100px">编辑</a>';
                }
            }, {
                title: "检查标准",
                field: "",
                width: 80,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:goInspectionStandardIndex(' + row.Id + ');" style="min-width:100px">检查标准</a>';
                }
            }, {
                title: "标准照片",
                field: "",
                width: 80,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:goSubjectFileIndex(' + row.Id + ');" style="min-width:100px">标准照片</a>';
                }
            }, {
                title: "失分描述",
                field: "",
                width: 80,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:goSubjectLossIndex(' + row.Id + ');" style="min-width:100px">失分描述</a>';
                }
            }, {
                title: "添加时间",
                field: "InDateTime",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "修改时间",
                field: "ModifyDateTime",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }],
            onClickRow: function (row, $element) {
                curRow = row;
            }
        });
    }

    function goEdit(id) {
        $("#Modal .modal-title").html('得分编辑');
        $("#Modal .modal-footer").show();
        $("#Modal .modal-body").empty();
        $("#Modal").modal("show");
        $("#Modal .modal-body").load("/ProjectContent/ScoreEdit", {}, function () {
            debugger
            $("#score-form").setForm(curRow);
            $("#score-form").data("json", JSON.stringify(curRow));
        })
    }

    function goInspectionStandardIndex() {
        $("#Modal .modal-title").html('检查标准');
        $("#Modal .modal-footer").hide();
        $("#Modal .modal-body").empty();
        $("#Modal").modal("show");
        $("#Modal .modal-body").load("/ProjectContent/_PartialScoreSubjectInspectionStandardIndex", {}, function () {
            $("#score-form").setForm(curRow);
            $("#score-form").data("json", JSON.stringify(curRow));
        })
    }

    function goSubjectFileIndex() {
        $("#Modal .modal-title").html('标准照片');
        $("#Modal .modal-footer").hide();
        $("#Modal .modal-body").empty();
        $("#Modal").modal("show");
        $("#Modal .modal-body").load("/ProjectContent/_PartialScoreSubjectFileIndex", {}, function () {
            $("#score-form").setForm(curRow);
            $("#score-form").data("json", JSON.stringify(curRow));
        })
    }

    function goSubjectLossIndex() {
        $("#Modal .modal-title").html('失分描述');
        $("#Modal .modal-footer").hide();
        $("#Modal .modal-body").empty();
        $("#Modal").modal("show");
        $("#Modal .modal-body").load("/ProjectContent/_PartialScoreSubjectLossIndex", {}, function () {
            $("#score-form").setForm(curRow);
            $("#score-form").data("json", JSON.stringify(curRow));
        })
    }
</script>


