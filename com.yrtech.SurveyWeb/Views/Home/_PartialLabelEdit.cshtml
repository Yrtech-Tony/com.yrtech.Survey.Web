<div>
    <form class="form-horizontal form-label-left" id="label-form">
        <fieldset>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ProjectCode">
                    标签代码<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="LabelCode" name="LabelCode" required="required" type="text" maxlength="15" class="form-control">
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ProjectName">
                    标签名称<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="LabelName" name="LabelName" required="required" type="text" maxlength="15" class="form-control">
                </div>
            </div>
           
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="LabelType">
                    标签类型<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <select id="LabelType" name="LabelType" class="form-control col-md-7 col-xs-12"></select>
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UseChk">
                    使用与否
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 5px;">
                    <input type="checkbox" id="UseChk" name="UseChk">
                </div>
            </div>
            <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Remark">
                    备注
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <textarea id="Remark" name="Remark" rows="5" class="form-control col-md-7 col-xs-12"></textarea>
                </div>
            </div>
            
        </fieldset>
    </form>
</div> 
