                        <div class="col-md-3">
                            <label>补充失分说明:</label>
                        </div>
                        <div class="col-md-9">
                            <textarea id="LossDesc2" name="LossDesc2" class="form-control" style=""></textarea>
                        </div>
                    </div>
                    <div>
                        <button id="btnAddLossPic" class="btn btn-primary" style="margin-right:0px" data-loading-text="提交中...">添加</button>
