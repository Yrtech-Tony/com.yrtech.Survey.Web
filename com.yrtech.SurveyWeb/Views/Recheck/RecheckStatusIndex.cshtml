@{
    ViewBag.Title = "进度管理";
}

<style>
    .operation {
        padding: 10px 0px;
        text-align: right;
    }

        .operation .btn {
            width: 100px;
        }

    .bootstrap-table .fixed-table-container.fixed-height .fixed-table-border {
        border-left: none;
        border-right: none;
    }
</style>
<div class="condition">
    <div style="text-align:right;width:100%">
        <button id="btnQuery" class="btn btn-primary">查询</button>
        <button id="btnExportRecheckStatus" class="btn btn-primary">导出</button>
    </div>
    <div class="form-inline">
        <div class="form-group">
            <label class="control-label">品牌:</label>
            <select id="brand-sel" class="form-control" style="width:200px;"></select>
        </div>
        <div class="form-group">
            <label class="control-label">年份:</label>
            <select id="year-sel" class="form-control" style="width:200px;"></select>
        </div>
        <div class="form-group">
            <label class="control-label">期号:</label>
            <select id="project-sel" class="form-control" style="width: 140px"></select>
        </div>
        <div class="form-group">
            <label class="control-label">经销商代码:</label>
            <input id="shopCode" class="form-control" style="width:300px;" placeholder="经销商代码" />
        </div>
    </div>
    
</div>
<div class="result">
    <table id="recheckstatus-info-table" class="table  table-set"></table>
</div>
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-hidden="false" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">审核记录</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/api/common.js"></script>
<script src="~/Scripts/custom/form-serialize.js?20200510"></script>

<script>
    $(function () {
        $('title').html('@ViewBag.Title')
        bindBrandSelect();
        //加载年份
        $("#year-sel").change(function () {
            bindProjectSelect();
        });
        for (var i = 2020; i <= 2030; i++) {
            $("#year-sel").append($("<option>").text(i + "").val(i + ""));
        }
        var tYear = new Date().getFullYear();
        $("#year-sel").val(tYear);
        $("#year-sel").change();

        //加载期号
        $("#brand-sel").change(function () {
            bindProjectSelect();
        });
        $("#project-sel").change(function () {
            loadRecheckStatus();
        });

        $("#btnAnswerShopAdd").click(function () {
            $("#Modal").modal("show");
            $("#Modal .modal-body").load("/ProjectContent/AnswerShopInfoEdit", {}, function () {
            })
            return false;
        });

        //initRecheckStatusTable();
        loadRecheckStatus();
        $("#btnQuery").click(function () {
            loadRecheckStatus();
        }).trigger("click");

        $("#btnExportRecheckStatus").click(function () {
            $("#btnExportRecheckStatus").button('loading');

            $.commonGet("Recheck/RecheckStatusExport", {
                projectId: $("#project-sel").val(),
                shopId: "",
                shopCode:$("#shopCode").val()
            }, function (data) {
                window.location.href = baseSurveyUrl + data;
                $("#btnExportRecheckStatus").button('reset');
            });
        });
    })

    var curRow;

    function loadRecheckStatus() {
        $('#recheckstatus-info-table').bootstrapTable("showLoading");
        $.commonGet("Recheck/GetRecheckStatus", {
            projectId: $("#project-sel").val(),
            shopId: '',
            shopCode:$("#shopCode").val()
        }, function (data) {
            //$('#recheckstatus-info-table').bootstrapTable("hideLoading");
            //$('#recheckstatus-info-table').bootstrapTable("load", data);
            initRecheckStatusTable(data);
        });
    }

    //初始化期号表格
    function initRecheckStatusTable(data) {
        $('#recheckstatus-info-table').bootstrapTable('destroy').bootstrapTable({
            pagination: true,
            data:data,
            striped: true, //是否显示行间隔色
            width: "100%",
            height: getClientHeight() - 260,
            showColumns: false, // 开启自定义列显示功能
            sortable: true,
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 50, 100, 500],
            columns: [{
                title: "经销商代码",
                field: 'ShopCode',
                width: 150,
                valign: "middle",
                align: "center"
            }, {
                title: "经销商名称",
                field: "ShopName",
                valign: "middle",
                width: 230,
                align: "center",
                sortable: false
            }, {
                title: "进店",
                field: "Status_S0",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "提交审核",
                field: "Status_S1",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "审核进行中",
                field: "Status_S2",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "审核完毕",
                field: "Status_S3",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false,

            }, {
                title: "审核详细",
                field: "",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false,
                formatter: function (value, row, index) {
                    return '<a href="javascript:getRecheckStatusDtl();" style="min-width:100px">审核详细</a>';
                }
            }, {
                title: "审核修改",
                field: "Status_S4",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "仲裁",
                field: "Status_S5",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "督导抽查",
                field: "Status_S6",
                width: 100,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "项目经理抽查",
                field: "Status_S7",
                width: 150,
                valign: "middle",
                align: "center",
                sortable: false
            }],
            onClickRow: function (row, $element) {
                curRow = row;
            }
        });
    }
    function getRecheckStatusDtl() {
        $("#Modal .modal-body").empty();
        $("#Modal").modal("show");
        $("#Modal .modal-body").load("/Recheck/RecheckStatusDtl", {}, function () {
            $("#answer-shop-info-form").setForm(curRow);
            $("#answer-shop-info-form").data("json", JSON.stringify(curRow));
        })
    }

</script>


