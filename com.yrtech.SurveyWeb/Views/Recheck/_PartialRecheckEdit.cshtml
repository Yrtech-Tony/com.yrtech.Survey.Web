    function loadRecheckStatusDtl() {
        $.commonGet("Recheck/GetRecheckStatusDtl", {
            projectId: curRow.ProjectId,
            shopId: curRow.ShopId,
        }, function (data) {
            $('#recheckStatusDtl-table').bootstrapTable("load", data);
        });
    }
</script>
