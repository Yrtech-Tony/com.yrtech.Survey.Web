<script>
    $(function () {
        initRecheckStatusDtlTable();
        loadRecheckStatusDtl();
    })
    function initInspection() {
        $('#ins-table').bootstrapTable({
            pagination: true,
            striped: true, //是否显示行间隔色
            pageNumber: 1,
            pageSize: 10,
            pageList: [10, 15, 20, 50],
            columns: [{
                title: "序号",
                field: 'RecheckTypeCode',
                width: 100,
                valign: "middle",
                align: "center"
            }, {
                title: "检查标准",
                field: "RecheckTypeName",
                width: 200,
                valign: "middle",
                align: "center",
                sortable: false
            }, {
                title: "检查结果",
                field: "InDateTime",
                width: 200,
                valign: "middle",
                align: "center",
                sortable: false
            }]
        });
    }
    function initPhoto() {
